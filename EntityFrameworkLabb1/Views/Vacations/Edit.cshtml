@model EntityFrameworkLabb1.Models.Domain.Vacation

@{
    ViewData["Title"] = "Edit";
}

<h1>Ändra</h1>

<h4>Ledighet</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="VacationId" />
            <div class="form-group">
                <label asp-for="VacationType" class="control-label"></label>
                <input asp-for="VacationType" class="form-control" />
                <span asp-validation-for="VacationType" class="text-danger"></span>
            </div><br/>
            <div class="form-group">
                <input type="submit" value="Spara" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Tillbaka till listan</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
